<resources>
    <!--Tranparencia-->
    <style name="Transparent" parent="android:style/Theme.Translucent">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

<!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- PERSONALIZANDO LOS TEMAS PARA LA INTERGAZ DE USUARIO-->
    <style name="TemaProductosUnion" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/ActionBarUnion</item>
        <item name="android:buttonStyle">@style/MyButtonStyle</item>
    </style>
    <style name="TemaPersonalizadoSteve" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBarPersonalizadoSteve</item>
        <item name="android:buttonStyle">@style/ButtonStylePersonalizadoSteve</item>
    </style>


    <style name="ActionBarUnion" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/ColorPUPrincipal</item>
    </style>
    <style name="MyButtonStyle" parent="@android:style/Widget.Holo.Light.Button">
        <item name="android:background">@drawable/border_bottom</item>
        <item name="android:textColor">@color/ColorPUTercero</item>
        <item name="android:layout_width" >fill_parent</item>
        <item name="android:layout_height" >wrap_content</item>
        <item name="android:gravity" >center</item>
        <item name="android:textSize" >12dp</item>
        <item name="android:textStyle" >bold</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="ActionBarPersonalizadoSteve" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
    <item name="android:background">@color/PersonalizadoSteve1</item>
</style>
    <style name="ButtonStylePersonalizadoSteve" parent="@android:style/Widget.Holo.Light.Button">
        <item name="android:background">@drawable/border_bottom_personalizado_steve</item>
        <item name="android:textColor">@color/PersonalizadoSteve3</item>
        <item name="android:layout_width" >fill_parent</item>
        <item name="android:layout_height" >wrap_content</item>
        <item name="android:gravity" >center</item>
        <item name="android:textSize" >12dp</item>
        <item name="android:textStyle" >bold</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>


</resources>
