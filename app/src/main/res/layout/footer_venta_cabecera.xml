<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Total"
            android:id="@+id/VCAP_textViewFooterText"
            android:textColor="@color/PersonalizadoSteve4"
            android:typeface="sans"
            android:textStyle="bold|italic"
            android:textSize="16dp"
            android:layout_weight="1"
            android:gravity="left"
            android:layout_gravity="left" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/VCAP_textViewFooterTotal"
            android:layout_weight="1"
            android:gravity="right"
            android:textStyle="bold|italic"
            android:textColor="@color/PersonalizadoSteve4"
            android:layout_gravity="right"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stock Actual"
            android:id="@+id/VCAP_textViewSurtidoStock"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Surtido Venta"
            android:id="@+id/VCAP_textViewSurtiDoVenta"
            android:layout_weight="1"
            android:gravity="right"
            android:textStyle="bold"
            android:textSize="12dp" />
    </LinearLayout>

</LinearLayout>