<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="6dip">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Produc: "
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/VCPA_textView2NombreProducto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:text="Precio: "
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/VVP_precio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/VCPA_textView2NombreProducto"
        android:layout_toRightOf="@+id/VCPA_textView2NombreProducto"
        android:layout_alignBaseline="@+id/VCPA_textView2NombreProducto"
        android:text="TextView" />

    <TextView
        android:id="@+id/VVP_produc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_above="@+id/VCPA_textView2NombreProducto"
        android:layout_toRightOf="@+id/VCPA_textView2NombreProducto"
        android:layout_toEndOf="@+id/VCPA_textView2NombreProducto" />

</RelativeLayout>