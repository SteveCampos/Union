<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="6dip">


    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Codigo: "
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/VC_producto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:text="Establec: "
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/VC_p_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/VC_producto"
        android:layout_below="@+id/VC_producto"
        android:text="Nombre: "
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/VC_dev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/VC_p_a"
        android:layout_below="@+id/VC_p_a"
        android:text="Docum: "
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/VME_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/VC_p_a"
        android:layout_alignBottom="@+id/VC_p_a"
        android:layout_toRightOf="@+id/VC_p_a"
        android:text="TextView" />

    <TextView
        android:id="@+id/VME_docum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/VC_dev"
        android:layout_alignBottom="@+id/VC_dev"
        android:layout_alignLeft="@+id/VME_nombre"
        android:text="TextView" />

    <TextView
        android:id="@+id/VME_establec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/VC_p_a"
        android:layout_toRightOf="@+id/VC_p_a"
        android:text="TextView" />

    <TextView
        android:id="@+id/VME_codigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/VC_producto"
        android:layout_alignLeft="@+id/VME_establec"
        android:text="TextView" />
</RelativeLayout>