<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="union.union_vr1.Vistas.VMovil_Venta_CabeceraX"
    android:orientation="vertical">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="4">

        <TextView android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:padding="10dp"
            android:text="@string/VVCR_titulo" android:textSize="20sp"
            android:id="@+id/VCCR_titulo"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="2">

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/VCCR_LSTcresez"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/textView" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="4">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Monto a Pagar:"
            android:id="@+id/textView"
            android:layout_below="@+id/VCCR_SPNcredit"
            android:layout_marginTop="20dp"
            android:layout_alignParentLeft="true"
            android:layout_weight="1" />

        <TextView
            android:layout_marginTop="20dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/VCCR_SPNcredit"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:text=""
            android:textColor="@color/ColorPUPrincipal"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="4">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Cobrar"
            android:id="@+id/VCCR_BTNactualiz"
            android:layout_weight="1" />
        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Cancelar"
            android:id="@+id/VCCR_BTNcancelar"
            android:layout_weight="1"
            android:background="@color/PersonalizadoSteve5"/>
    </LinearLayout>

</LinearLayout>
