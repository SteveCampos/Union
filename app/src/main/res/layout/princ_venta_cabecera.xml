    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/VC_listView" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="4">

            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/VC_spinnerTipoDocumento"
                android:layout_weight="1"/>

            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/VC_spinnerFormaPago"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="4">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Agregar Productos"
                android:id="@+id/VC_buttonAgregarProductos"
                android:layout_weight="1"
                android:background="@color/PersonalizadoSteve2" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Vender"
                android:id="@+id/VC_buttonVender"
                android:layout_weight="1"
                android:background="@color/PersonalizadoSteve4" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
